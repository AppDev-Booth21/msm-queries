<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
   <img src="http://robohash.org/<%= @the_actor.image %>"
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<h2>Filmography</h2>

<table border="1">

  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>
  
     <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
      
    </th>
  </tr>

<% @filmography_actor.each do |film|%>
  <tr>
    <td>
      <% film.movie_id %>
      <% movie = Movie.where({ :id => film.movie_id}).at(0)%>
      <%= movie.title%>
    </td>

    <td>
      <%= movie.year %>
    </td>

    <td>
      <% movie.director_id%>
      <% director = Director.where({ :id => movie.director_id}).at(0)%>
      <%= director.name%>
    </td>

    <td>
      <%= film.name%>
    </td>


    <td>
      <a href="/movies/1">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>